
<div class="container pt-4">
  <div class="row mt-3 mb-4">
      <h2>Thông tin phòng</h2>
  </div>
  <form method="POST" enctype="multipart/form-data">
    <div class="row ">
      <div class="mb-3 col-lg-6 ">
    <label for="name" class="form-label">Tên phòng</label>
    <input type="text" class="form-control" id="name" name="typeRoom" placeholder="Tên khách sạn"required>
    </div>
    <div class="mb-3 col-lg-6 ">
      <label for="image" class="form-label">ảnh phòng</label>
      <input type="file" class="form-control" id="image" name="upload" multiple="multiple" required>
    </div>
    </div>
    <div class="row">
        <div class="mb-3 col-lg-6">
        <label for="price" class="form-label">Giá phòng</label>
        <input type="text" class="form-control" id="price" name="price" placeholder="VND / ngày" required>
      </div>
      <div class="mb-3 col-lg-6">
        <label for="area" class="form-label">Diện tích phòng</label>
        <input type="text" class="form-control" id="area" name="areaRoom" placeholder="mét vuông" required>
      </div>
    </div>
    
    <div class="row">
      <div class="mb-3 col-lg-6">
        <label for="description" class="form-label">Mô tả</label>
        <textarea class="form-control" id="description" name="description" placeholder="Mô tả về phòng"></textarea>
      </div>
    </div>
    <div class="row">
      <div class="mb-3 col-lg-12">
        <label for="exts" class="form-label">Tiện ích</label>
        <input type="text" class="form-control" id="exts" name="extension" placeholder="Các trang thiết bị">
      </div>
    </div>
  <button class="btn btn-primary" type="submit">Tạo</button>
  </form>
</div>